        },
        "example": {
          "name": "Test",
          "email": "1example@gmail.com",
          "birthDate": "20 Aug 2020"
        }
      },
      "UpdateUserRequest": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "array",
            "items": {
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "Test"
              },
              "avatar": {
                "type": "string",
                "description": "User's avatar",
                "format": "binary"
              }
            }
          }
        }
      },
      "UpdateUserRespons": {}
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
