          },
          "userId": {
            "type": "number",
            "description": "User's id",
            "example": "32143232436545474"
          },
          "isAdult": {
            "type": "boolein",
            "description": "",
            "example": "true"
          },
          "subscribe": {
            "type": "boolein",
            "description": "subscribe",
            "example": "true"
          },
          "avatar": {
            "type": "string",
            "description": "avatar",
            "example": "https//www.gravatar.com/avatar"
          },
          "refreshToken": {
            "type": "string",
            "description": "User's refreshToken",
            "example": "d113fc3f8c70bc958ff763c03bcc5ebbc563bb313386f922da4a891bf3049624"
          }
        },
        "example": {
          "name": "example",
          "email": "1example@gmail.com",
          "birthDate": "20 Aug 2010",
          "isAdult": "true",
          "subscribe": "true",
          "userId": "1573839013698358109",
