    "/api/drinks/mainpage": {
      "get": {
        "tags": ["Drinks"],
        "summary": "Gets drinks sorted by categories",
        "security": [{ "Bearer": [] }],
        "responses": {
          "201": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MainpageResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
      },
      "/api/drinks/popular": {
        "get": {
          "tags": ["Drinks"],
          "summary": "Gets popular drinks",
          "security": [{ "Bearer": [] }],
          "responses": {
            "200": {
              "description": "Success response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/PopularDrinksResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Not found"
            }
          }
        }
      },
      "/api/drinks/search": {
        "get": {
          "tags": ["Drinks"],
          "summary": "Search Drinks",
          "security": [{ "Bearer": [] }],
          "description": "Enables drink search based on a variety of criteria",
          "parameters": [
            {
              "name": "ingredient",
              "in": "query",
              "description": "Title of ingridient, that used in the drink",
              "required": false,
              "type": "string"
            },
            {
              "name": "drink",
              "in": "query",
              "description": "Query for drink names in the search",
              "required": false,
              "type": "string"
            },
            {
              "name": "category",
              "in": "query",
              "description": "Drink category",
              "required": false,
              "schema": {
                "type": "string",
                "enum": [
                  "Ordinary Drink",
                  "Cocktail",
                  "Shake",
                  "Other/Unknown",
                  "Cocoa",
                  "Shot",
                  "Coffee / Tea",
                  "Homemade Liqueur",
                  "Punch / Party Drink",
                  "Beer",
                  "Soft Drink"
                ]
              }
            },
            {
              "name": "page",
              "in": "query",
              "description": "Page number of results",
              "required": false,
              "type": "integer"
            },
            {
              "name": "limit",
              "in": "query",
              "description": "Number of results per page",
              "required": false,
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "Successful request",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/SearchDrinksResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Not found"
            }
          }
        }
      },
      "/api/drinks/{id}": {
        "get": {
          "tags": ["Drinks"],
          "summary": "Get drink by id",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "string",
                "format": "objectId",
                "description": "Drink id"
              },
              "description": "Drink id"
            }
          ],
          "security": [{ "Bearer": [] }],
          "responses": {
            "200": {
              "description": "Success response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/DrinkByIdResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Not found"
            }
          }
        }
      },
      "/api/drinks/own/add": {
        "post": {
          "tags": ["Drinks"],
          "summary": "Add user's recipe of drink",
          "security": [{ "Bearer": [] }],
          "requestBody": {
            "description": "User's recipe object",
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "$ref": "#/components/schemas/AddOwnDrinkRequest"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Drink successfully added",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/AddOwnDrinkResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Not found"
            }
          }
        }
      },
      "/api/drinks/own": {
        "get": {
          "tags": ["Drinks"],
          "summary": "Get user's own drinks",
          "security": [{ "Bearer": [] }],
          "parameters": [
            {
              "in": "query",
              "name": "page",
              "description": "Number of page. Default page = 1"
            },
            {
              "in": "query",
              "name": "limit",
              "description": "Number of drinks on one page. Default limit = 10"
            }
          ],
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/AllOwnDrinksResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        }
      },
      "/api/drinks/own/remove/{id}": {
        "delete": {
          "tags": ["Drinks"],
          "summary": "Delete user's own drink",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "description": "Drink id"
            }
          ],
          "security": [{ "Bearer": [] }],
          "responses": {
            "200": {
              "description": "Drink successfully removed"
            },
            "403": {
              "description": "User is not authorized to delete this drink"
            },
            "404": {
              "description": "Not found"
            }
          }
        }
      },
      "/api/drinks/favorite": {
        "get": {
          "tags": ["Drinks"],
          "summary": "Get drinks from favorites",
          "parameters": [
            {
              "in": "query",
              "name": "page",
              "description": "Number of page. Default page = 1"
            },
            {
              "in": "query",
              "name": "limit",
              "description": "Number of cocktails on one page. Default limit = 10"
            }
          ],
          "security": [{ "Bearer": [] }],
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/AllFavoritesResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Not found"
            }
          }
        }
      },"/api/drinks/favorite/add/{id}": {
        "post": {
          "tags": ["Drinks"],
          "summary": "Add drink to favorites",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "string",
                "format": "objectId",
                "description": "Drink id"
              },
              "description": "Drink id"
            }
          ],
          "security": [{ "Bearer": [] }],
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/AddToFavoritesResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Not found"
            }
          }
        }
      },"/api/drinks/favorite/remove/{id}": {
        "delete": {
          "tags": ["Drinks"],
          "summary": "Remove drink from favorites",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "string",
                "format": "objectId",
                "description": "Drink id"
              },
              "description": "Drink id"
            }
          ],
          "security": [{ "Bearer": [] }],
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/DeleteFromFavoritesResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Not found"
            }
          }
        }
      }
  },

  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["name", "email", "password", "birthDate"],
        "properties": {
